{
  "manifest_version": 3,
  "name": "Tailor",
  "version": "0.1.0",
  "author": "Stanko",
  "description": "A development tool for measuring and inspecting elements.",
  "homepage_url": "https://muffinman.io/tailor",
  "action": {
    "default_icon": "icons/blue/256.png",
    "default_title": "Tailor",
    "default_popup": "templates/popup.html"
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/blue/16.png",
    "32": "icons/blue/32.png",
    "48": "icons/blue/48.png",
    "128": "icons/blue/128.png",
    "256": "icons/blue/256.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "build/content.js"
      ],
      "css": [
        "css/tailor.css"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "tailor@muffinman.io",
      "strict_min_version": "109.0"
    }
  }
}