{
  "manifest_version": 3,
  "name": "Tailor",
  "description": "Takes your website's measures",
  "version": "0.1.0",
  "action": {
    "default_icon": "icons/256.png"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "tailor/index.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png",
    "256": "icons/256.png"
  }
}