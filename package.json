{
  "name": "@stanko/tailor",
  "version": "0.0.16",
  "private": false,
  "license": "MIT",
  "description": "",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "lint:js": "eslint .",
    "build:esm": "tsc -p tsconfig.json",
    "build:copy-extension-files": "cp dist/index* extension/tailor/ && cp docs/css/tailor.css extension/tailor/",
    "build": "npm run clean && npm run build:esm && npm run build:copy-extension-files",
    "start": "esbuild docs/src/docs.ts --bundle --tsconfig=tsconfig-demo.json --servedir=docs --outdir=docs/build",
    "build:docs": "esbuild docs/src/docs.ts --bundle --tsconfig=tsconfig-demo.json --outdir=docs/build --minify --sourcemap",
    "prepublishOnly": "npm run build",
    "firefox:run": "web-ext run -s ./extension"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "chrome-types": "^0.1.273",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "typescript": "^5.4.2",
    "web-ext": "^7.11.0",
    "webextension-polyfill": "^0.10.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Stanko/tailor.git"
  },
  "keywords": [],
  "author": "Stanko",
  "bugs": {
    "url": "https://github.com/Stanko/tailor/issues"
  },
  "homepage": "https://github.com/Stanko/tailor#readme",
  "files": [
    "dist/",
    "docs/css/tailor.css",
    "CHANGELOG.md"
  ]
}