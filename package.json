{
  "name": "@stanko/tailor",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "description": "",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "lint:js": "eslint .",
    "build:esm": "esbuild ./src/index.ts --minify --sourcemap --outdir=dist",
    "build:extension": "esbuild ./src/extension/*.ts --bundle --minify --sourcemap --outdir=extension/build",
    "build:copy-css": "cp docs/css/tailor.css extension/css/",
    "build": "npm run clean && npm run build:esm && npm run build:copy-css && npm run build:extension",
    "start": "esbuild docs/src/docs.ts --bundle --tsconfig=tsconfig-demo.json --servedir=docs --outdir=docs/build",
    "build:docs": "esbuild docs/src/docs.ts --bundle --tsconfig=tsconfig-demo.json --outdir=docs/build --minify --sourcemap",
    "firefox:run": "web-ext run -s ./extension --devtools --verbose",
    "firefox:build": "web-ext build -s ./extension --overwrite-dest",
    "generate-icons": "node ./tools/generate-icons.js",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "chrome-types": "^0.1.273",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "typescript": "^5.4.2",
    "web-ext": "^7.11.0",
    "webextension-polyfill": "^0.10.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Stanko/tailor.git"
  },
  "keywords": [],
  "author": "Stanko",
  "bugs": {
    "url": "https://github.com/Stanko/tailor/issues"
  },
  "homepage": "https://github.com/Stanko/tailor#readme",
  "files": [
    "dist/",
    "docs/css/tailor.css",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@types/webextension-polyfill": "^0.10.7"
  }
}